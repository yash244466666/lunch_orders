generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Restaurant {
  id      Int      @id @default(autoincrement())
  name    String
  FoodPacks FoodPack[]
}

model FoodPack {
  id         Int      @id @default(autoincrement())
  name       String
  restaurant Restaurant @relation(fields: [restaurantId], references: [id])
  restaurantId Int
  Votes      Vote[]
}

model Vote {
  id       Int      @id @default(autoincrement())
  employeeId String
  foodPack  FoodPack @relation(fields: [foodPackId], references: [id])
  foodPackId Int
  date      DateTime
}
